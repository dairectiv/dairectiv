includes:
    # Doctrine
    - vendor/phpstan/phpstan-doctrine/extension.neon
    - vendor/phpstan/phpstan-doctrine/rules.neon
    # PHPUnit
    - vendor/phpstan/phpstan-phpunit/extension.neon
    - vendor/phpstan/phpstan-phpunit/rules.neon
    # Symfony
    - vendor/phpstan/phpstan-symfony/extension.neon
    - vendor/phpstan/phpstan-symfony/rules.neon
    # Webmozart Assert
    - vendor/phpstan/phpstan-webmozart-assert/extension.neon
    # Strict rules
    - vendor/phpstan/phpstan-strict-rules/rules.neon
    # Deprecation rules
    - vendor/phpstan/phpstan-deprecation-rules/rules.neon
    # Safe rules
    - vendor/thecodingmachine/phpstan-safe-rule/phpstan-safe-rule.neon
rules:
    - Dairectiv\PHPStan\Rules\TestNameRule
    - Dairectiv\PHPStan\Rules\UseCaseRule
    - Dairectiv\PHPStan\Rules\RepositoryMethodRule
parameters:
    level: max
    paths:
        - src/
        - tests/
        - tools/phpstan/src
        - tools/phpstan/tests
    tmpDir: var/cache/.phpstan.cache
    doctrine:
        objectManagerLoader: tools/phpstan/doctrine.php
        reportDynamicQueryBuilders: true
        reportUnknownTypes: false
        literalString: true
    symfony:
        containerXmlPath: var/cache/dev/Dairectiv_SharedKernel_Infrastructure_Symfony_KernelDevDebugContainer.xml
        consoleApplicationLoader: tools/phpstan/console.php
        constantHassers: false
    excludePaths:
        - config/reference.php
    scanFiles:
        - config/reference.php
        - vendor/symfony/dependency-injection/Loader/Configurator/ContainerConfigurator.php
